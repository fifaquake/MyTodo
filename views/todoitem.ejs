<div class = "tile bg-color-blue">
<% } else { %>
<div class = "tile bg-color-green">
<% } %>
  <div class = "tile-content">
  <p><%= todoitem.content%></p>
  
  </div>
  <div class = "brand">
  <span class="win8name"><%= todoitem.date%></span>
  <% if (todoitem.priority == "1") { %>
    <div id = <%=todoitem.id%> class="win8badge error bg-color-pink"></div>
  <% } else if (todoitem.priority == "2") { %>
    <div id = <%=todoitem.id%> class="win8badge error bg-color-blue"></div>
  <% } else { %>
